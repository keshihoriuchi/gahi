{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "target": "es2018",
    "inlineSourceMap": true,
    "lib": ["DOM", "DOM.Iterable", "ES2018", "ES2020"],
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
